{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "rules": {
        "no-console": "off",
        "semi": "off",
        "indent": ["error", 4],
        "space-before-function-paren": "off"
    },
    "extends": ["eslint:recommended", "standard", "plugin:react/recommended"]
}